        <rewrite>
          <fancy_url>
                  <from><![CDATA[/embeded\/(.*)/]]></from>
                  <to><![CDATA[/embeded/index/index/code/$1/]]></to>
                  
                      <complete>1</complete>
            </fancy_url>
        </rewrite>-->
    </global>
</config>