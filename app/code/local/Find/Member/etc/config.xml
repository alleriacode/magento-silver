<?xml version="1.0"?>
<config>
    <modules>
        <Find_Member>
            <version>0.1.0</version>
        </Find_Member>
    </modules>
    <frontend>
        <routers>
            <member>
                <use>standard</use>
                <args>
                    <module>Find_Member</module>
                    <frontName>member</frontName>
                </args>
            </member>
        </routers>
        <layout>
            <updates>
                <member>
                    <file>member.xml</file>
                </member>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <member>
                <class>Find_Member_Model</class>
                <resourceModel>member_mysql4</resourceModel>
            </member>
            <member_mysql4>
                <class>Find_Member_Model_Mysql4</class>
                <entities>
                    <member>
                        <table>member</table>
                    </member>
                </entities>
            </member_mysql4>
        </models>
        <resources>
            <member_setup>
                <setup>
                    <module>Find_Member</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </member_setup>
            <member_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </member_write>
            <member_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </member_read>
        </resources>
        <blocks>
            <member>
                <class>Find_Member_Block</class>
            </member>
        </blocks>
        <helpers>
            <member>
                <class>Find_Member_Helper</class>
            </member>
        </helpers>
        
        <rewrite>
           <fancy_url>
                      <from><![CDATA[/member\/(.*)/]]></from>
                      <to><![CDATA[member/index/index/name/$1]]></to>
                          <complete>1</complete>
            </fancy_url>
        </rewrite> 
     
    </global>
    
    
    
</config>