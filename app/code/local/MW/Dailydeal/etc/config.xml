    </adminhtml>   
    <global>
        <models>
            <dailydeal>
                <class>MW_Dailydeal_Model</class>
                <resourceModel>dailydeal_mysql4</resourceModel>
            </dailydeal>
            <dailydeal_mysql4>
                <class>MW_Dailydeal_Model_Mysql4</class>
                <entities>
                    <dailydeal>
                        <table>mw_dailydeal</table>
                    </dailydeal>
					<dailydealactive>
                        <table>mw_dailydeal_active</table>
                    </dailydealactive>
					<!-- 
                    <configproduct>
                    	<table>mw_dailydeal_configurable_product</table>
                    </configproduct> -->
                </entities>
            </dailydeal_mysql4>
        </models>
        <resources>
            <dailydeal_setup>
                <setup>
                    <module>MW_Dailydeal</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dailydeal_setup>
            <dailydeal_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </dailydeal_write>
            <dailydeal_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </dailydeal_read>
        </resources>
        <blocks>
            <dailydeal>
                <class>MW_Dailydeal_Block</class>
            </dailydeal>
        </blocks>
        <helpers>
            <dailydeal>
                <class>MW_Dailydeal_Helper</class>
            </dailydeal>
        </helpers>
    </global>
    <default>
    	<dailydeal>
    		<general>
    			<sidebardeal>1</sidebardeal>
    			<sidebaractive>2</sidebaractive>
    			<numberactive>3</numberactive>
    			<deallayout>two_columns_right</deallayout>
    			<title>Today's Deal</title>
    			<productdetaillabel>Time Left to Buy</productdetaillabel>
    			<timechange>48</timechange>
    		</general>
    	</dailydeal>
    </default>
	<crontab>
        <jobs>
            <MW_Dailydeal>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>dailydeal/observer::runCron</model></run>
            </MW_Dailydeal>
        </jobs>
    </crontab>
</config>