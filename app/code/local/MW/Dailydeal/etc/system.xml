<?xml version="1.0"?>
<config>
	<tabs>
        <mageworld translate="label">
            <label>Mage World</label>
            <sort_order>100</sort_order>
        </mageworld>
    </tabs>
    <sections>
    	<!-- ten module ko dc dat kem ten namespace o trc-->
    	<dailydeal translate="label" module="dailydeal">
            <label>Daily Deal</label>
            <tab>mageworld</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                 <general translate="label" module="dailydeal">
                    <label>Meta data Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                 
                 	<fields>
                 		<sidebardeal translate="label">
                 			<label>Show daily deal block on</label>
	                 		<frontend_type>select</frontend_type>
	                        <source_model>dailydeal/source_sidebar</source_model>
	                        <sort_order>3</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</sidebardeal>
                 		<sidebaractive translate="label">
                 			<label>Show active deals block on</label>
                 			<frontend_type>select</frontend_type>
                 			<source_model>dailydeal/source_sidebar</source_model>
                 			<sort_order>6</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</sidebaractive>
                 		<calendar translate="label">
                 		<label>Show block calendar on</label>
                 			<frontend_type>select</frontend_type>
                 			<source_model>dailydeal/source_sidebar</source_model>
                 			<sort_order>9</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</calendar>
                 		<numberactive translate="label">
                 			<label>Number of active deals</label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>12</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</numberactive>
                 		<deallayout translate="label">
                 			<frontend_type>select</frontend_type>
                 			<label>List Deals Layout</label>
                 			<source_model>Mage_Page_Model_Source_Layout</source_model>
                 			<sort_order>15</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</deallayout>
                 		<columncount translate="label">
                 			<label>List Deals Columns</label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>18</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</columncount>
                 		<title translate="label">
                 			<label>Today's Deal Label </label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>21</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</title>
                 		<productdetaillabel translate="label">
                 			<label>Time Left to Buy Label </label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>24</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</productdetaillabel>
                 		<timechange translate="label">
                 			<label>Show count down by day when deal ends over (hours)</label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>27</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</timechange>
                 		<limitpercustomer translate="label">
                 			<label>Limit deals per a customer</label>
                 			<frontend_type>text</frontend_type>
                 			<sort_order>30</sort_order>
	                        <show_in_default>1</show_in_default>
	                        <show_in_website>1</show_in_website>
	                        <show_in_store>1</show_in_store>
                 		</limitpercustomer> 
                 	</fields>
                 </general>
				 <author_information translate="label">
                    <label>Author Information</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>The Daily Deal is developed and supported by &lt;a href="http://www.mage-world.com/"&gt;www.Mage-World.com&lt;/a&gt;.
If you need any support or have any question please contact us at &lt;a href="mailto:support@mage-world.com"&gt;support@mage-world.com.&lt;/a&gt;
                    </comment>
                </author_information>
			</groups>
    	</dailydeal>
    </sections>
</config>
